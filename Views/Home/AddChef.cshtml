@{
    ViewData["Title"] = "Add Chef Page";
}
@model Chef

<h1 class="text-center m-1">Add a Chef!</h1>
<div class="border border-dark p-3 m-3">
    <form method="POST" asp-action="CreateChef" asp-controller="Home">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" type="text" asp-for="FirstName">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input class="form-control" type="text" asp-for="LastName">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Date of Birth</label>
            <input class="form-control" type="date" asp-for="BirthDate">
            <span class="text-danger" asp-validation-for="BirthDate"></span>
        </div>
        <button class="btn btn-primary" type="submit">Add Chef</button>
    </form>
</div>